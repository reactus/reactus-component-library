{
    "name": "reactus-component-library",
    "version": "0.1.0",
    "description": "Reactus component library boilerplate",
    "repository": "git@github.com:reactus/reactus-component-library.git",
    "author": "Daniel Beff",
    "main": "dist/assets/scripts/bundle.js",
    "scripts": {
        "start": "clear && npm run clean:dev && npm run webpack:dev",
        "build": "npm run clean:prod && npm run webpack:prod ",
        "webpack:dev": "webpack-dev-server --config config/webpack.config.dev.babel.js --hot",
        "webpack:prod": "webpack -p --config config/webpack.config.prod.babel.js",
        "clean:dev": "rimraf .tmp",
        "clean:prod": "rimraf dist",
        "test": "jest --config jest.json --watch",
        "test:coverage": "jest --config jest.json --coverage"
    },
    "devDependencies": {
        "autoprefixer": "^6.6.1",
        "babel-core": "^6.21.0",
        "babel-eslint": "^7.1.1",
        "babel-jest": "^18.0.0",
        "babel-loader": "^6.2.10",
        "babel-preset-es2015": "^6.18.0",
        "babel-preset-react": "^6.16.0",
        "babel-preset-stage-2": "^6.22.0",
        "css-loader": "^0.26.1",
        "enzyme": "^2.7.1",
        "eslint": "^3.14.0",
        "eslint-config-reactus": "^0.1.1",
        "eslint-loader": "^1.6.1",
        "file-loader": "^0.9.0",
        "friendly-errors-webpack-plugin": "^1.1.3",
        "frontendler-sass": "^0.3.0",
        "html-webpack-plugin": "^2.26.0",
        "jest": "^18.1.0",
        "jest-cli": "^18.1.0",
        "jest-css-modules": "^1.1.0",
        "json-loader": "^0.5.4",
        "node-sass": "^4.3.0",
        "open-browser-webpack-plugin": "0.0.3",
        "postcss-loader": "^1.2.2",
        "react-addons-test-utils": "^15.4.2",
        "react-hot-loader": "^3.0.0-beta.6",
        "rimraf": "^2.5.4",
        "sass-loader": "^4.1.1",
        "style-loader": "^0.13.1",
        "url-loader": "^0.5.7",
        "webpack": "^2.2.0",
        "webpack-dev-server": "2.2.0"
    },
    "dependencies": {
        "axios": "^0.15.3",
        "fastclick": "^1.0.6",
        "history": "^3.0.1",
        "jsdom": "^9.9.1",
        "object-assign": "^4.1.1",
        "react": "^15.4.2",
        "react-dom": "^15.4.2",
        "react-redux": "^5.0.2",
        "react-router": "^3.0.1",
        "redux": "^3.6.0",
        "redux-promise": "^0.5.3"
    },
    "engines": {
        "npm": ">=3",
        "node": ">=5"
    }
}
